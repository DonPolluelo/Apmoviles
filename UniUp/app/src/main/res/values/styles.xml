<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#FFFF</item>
        <item name="android:textColorSecondary">#FFFF</item>
    </style>

    <!--  Theme de barra superior -->

    <style name="CustomToolbarStyle" parent="Theme.AppCompat">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">#FFFF</item>
    </style>

    <!--  Theme de popup tres puntos -->

    <style name="CustomPopupStyle" parent="android:Theme.Holo.Light">
        <item name="android:textColorPrimary">#FFFF</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-4dp</item>
    </style>
</resources>
